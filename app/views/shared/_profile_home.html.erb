<section>
  <article id="user">
    <% if(current_user.image.file.nil?)%>
    <%= gravatar_pic current_user, size: 150 %>
    <% else %>    
    <%= image_tag(@podcasts_user_path.image) %>
    <% end %>
    <p><%= current_user.name %> </p>
  </article>
  <article id="follow">
    <%= render 'shared/stats' %>
  </article>
  <article id="podcasts">
    <p> Podcasts </p>
    <div class="followed-podcasts">
      <% current_user.podcasts.limit(3).each do |p| %>
      <%= image_tag(p.image) %>
      <% end %>
      <%= link_to "view more", podcasts_user_path(current_user), {class: "all-podcasts"}  %>

    </div>
  </article>
</section>
