<% provide(:title, "Sign in") %>
<article id="signin">
<h1>Sign in</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email, class: "form-control" %>

      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control"%>

      <%= f.submit "Sign in", class: "btn btn-large btn-default pull-left" %>
    <% end %>

    <p class="pull-right">New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>
</article>